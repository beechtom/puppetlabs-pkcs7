{
  "description": "Create a key pair",
  "input_method": "stdin",
  "parameters": {
    "force": {
      "type": "Boolean",
      "description": "Whether to overwrite an existing key pair",
      "default": false
    },
    "keysize": {
      "type": "Integer",
      "description": "The size of the key to generate",
      "default": 2048
    },
    "private_key": {
      "type": "String",
      "description": "Path to the private key",
      "default": "keys/private_key.pkcs7.pem"
    },
    "public_key": {
      "type": "String",
      "description": "Path to the public key",
      "default": "keys/public_key.pkcs7.pem"
    }
  },
  "files": ["ruby_task_helper/files/task_helper.rb"]
}
